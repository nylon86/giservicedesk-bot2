{
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "type": "AdaptiveCard",
    "version": "1.2",
    "body": [
        {
            "type": "TextBlock",
            "text": "Lista dei browser",
            "size": "Medium",
            "weight": "Bolder",
            "wrap": true
        },
        {
            "type": "TextBlock",
            "text": "Quale browser stai utilizzando?",
            "wrap": true
        },
        {
            "type": "ImageSet",
            "images": [
                {
                    "type": "Image",
                    "size": "Medium",
                    "url": "${$root.iconChrome}",
                    "selectAction": {
                        "type": "Action.Submit",
                        "title": "Chrome",
                        "data": "Chrome v2.0"
                    }
                },
                {
                    "type": "Image",
                    "size": "Medium",
                    "url": "${$root.iconFirefox}",
                    "selectAction": {
                        "type": "Action.Submit",
                        "title": "Firefox",
                        "data": "Firefox v2.0"
                    }
                },
                {
                    "type": "Image",
                    "size": "Medium",
                    "url": "${$root.iconExplorer}",
                    "selectAction": {
                        "type": "Action.Submit",
                        "title": "Internet Explorer",
                        "data": "Internet Explorer v2.0"
                    }
                },
                {
                    "type": "Image",
                    "size": "Medium",
                    "url": "${$root.iconEdge}",
                    "selectAction": {
                        "type": "Action.Submit",
                        "title": "Microsoft Edge",
                        "data": "Microsoft Edge v2.0"
                    }
                }
            ]
        }
    ]
}