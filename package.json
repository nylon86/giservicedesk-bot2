{
    "name": "giservicedesk-bot2",
    "version": "1.0.0",
    "description": "Un bot per aiutare su zucchetti",
    "author": "luca.vallone@enginium.eu",
    "license": "MIT",
    "scripts": {
        "start": "npm run build && npm run serve",
        "build": "npm run eslint && npm run build-ts",
        "serve": "node dist/server.js",
        "serve-ts": "ts-node src/server.ts",
        "copy-static-assets": "ts-node copyStaticAssets.ts",
        "build-ts": "tsc --build --noEmit false",
        "eslint": "npx eslint --ext .ts src/",
        "watch": "nodemon ./dist/server.js NODE_ENV=development"
    },
    "dependencies": {
        "adaptivecards": "^2.6.0",
        "adaptivecards-templating": "^1.4.0",
        "bot-solutions": "^1.0.0",
        "botbuilder": "4.10.3",
        "botbuilder-ai": "4.10.3",
        "botbuilder-dialogs": "4.10.3",
        "dotenv": "^8.2.0",
        "restify": "~8.5.1",
        "winston": "^3.3.3",
        "winston-format-debug": "^1.0.3"
    },
    "devDependencies": {
        "@types/dotenv": "6.1.1",
        "@types/node": "^14.14.7",
        "@types/restify": "8.4.2",
        "@typescript-eslint/eslint-plugin": "^4.14.1",
        "@typescript-eslint/parser": "^4.14.1",
        "eslint": "^7.18.0",
        "eslint-config-airbnb-base": "^14.2.1",
        "eslint-config-google": "^0.14.0",
        "eslint-plugin-import": "^2.22.1",
        "nodemon": "~1.19.4",
        "ts-node": "^9.1.1",
        "typescript": "^3.6.5"
    }
}